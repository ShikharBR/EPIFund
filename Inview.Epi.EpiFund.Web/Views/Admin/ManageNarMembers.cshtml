@using PagedList.Mvc
@model Inview.Epi.EpiFund.Web.Models.NarMemberImpSearchResultsModel
@{
    ViewBag.Title = "Manage NAR Members";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h3 class="page-header">Manage NAR Members</h3>
<div class="row">
    <div class="col-lg-12">
        <input type="button" class="btn btn-primary" value="Create New NAR Member" onclick="location.href='@Url.Action("CreateNARMember", "Admin")    '" />
    </div>
</div>
<div style="float:right;">
    <select id="ddlRowCount" onchange="changeRowCount('@Url.Action("ManageNarMembers", "Admin")')">
        <option value="25">25</option>
        <option value="50" selected="selected">50</option>
        <option value="75">75</option>
        <option value="100">100</option>
    </select>
</div>
<br />
<br />
@using (Html.BeginForm("ManageNarMembers", "Admin", FormMethod.Post))
{
    <div class="panel-group" id="accordion">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">
                    <a data-toggle="collapse" data-parent="#accordion" href="#searchbox">
                        <button class="btn btn-default btn-xs" style="border: 1px solid #888">
                                Search NAR Members
                        </button>
                    </a>
                </h4>
            </div>
            <div id="searchbox" class="panel-collapse collapse">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-3">
                            <div class="input-group">
                                @Html.LabelFor(s => s.FirstName)
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="input-group">
                                @Html.TextBoxFor(s => s.FirstName)
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="input-group">
                                @Html.LabelFor(s => s.LastName)
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="input-group">
                                @Html.TextBoxFor(s => s.LastName)
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-3">
                            <div class="input-group">
                                @Html.LabelFor(s => s.Email)
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="input-group">
                                @Html.TextBoxFor(s => s.Email)
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="input-group">
                                @Html.LabelFor(s => s.CompanyName)
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="input-group">
                                @Html.TextBoxFor(s => s.CompanyName)
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-3">
                            <div class="input-group">
                                @Html.LabelFor(s => s.AddressLine1)
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="input-group">
                                @Html.TextBoxFor(s => s.AddressLine1)
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="input-group">
                                @Html.LabelFor(s => s.City)
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="input-group">
                                @Html.TextBoxFor(s => s.City)
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-3">
                            <div class="input-group">
                                @Html.LabelFor(s => s.State)
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="input-group">
                                @Html.DropDownListFor(s => s.State, @Model.States)
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="input-group">
                                @Html.LabelFor(s => s.ShowActiveOnly)
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="input-group">
                                @Html.CheckBoxFor(s => s.ShowActiveOnly)
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <input type="submit" value="Search" class="btn btn-primary proceed" style="width: 200px; margin-top: 20px" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<br />
@{ Html.RenderPartial("_NarMembersListView", Model.Members); }
<br />
