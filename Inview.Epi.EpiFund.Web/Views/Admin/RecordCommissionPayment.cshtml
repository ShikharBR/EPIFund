@model Inview.Epi.EpiFund.Domain.ViewModel.RecordCommissionPaymentModel
@{
    ViewBag.Title = "Record Commission Payment";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm("RecordCommissionPayment", "Admin"))
{ 
    <div class="panel-header">
        <h3>Record Payment</h3>
    </div>
    <div class="input-group">
        @Html.LabelFor(s => s.AssetNumber, new { @class = "control-label", style = "font-weight:bold;" })
        <div class="controls">
            @Html.TextBoxFor(s => s.AssetNumber, new { @class = "form-control" })
        </div>
    </div>
    <div class="input-group">
        @Html.LabelFor(s => s.Amount, new { @class = "control-label", style = "font-weight:bold;" })
        <div class="controls">
            @Html.EditorFor(s => s.Amount, new { @class = "form-control" })
        </div>
    </div>
    <div class="input-group">
        @Html.LabelFor(s => s.PaymentInformation, new { @class = "control-label", style = "font-weight:bold;" })
        <div class="controls">
            @Html.EditorFor(s => s.PaymentInformation, new { @class = "form-control" })
        </div>
    </div>
    <div class="input-group">
        @Html.LabelFor(s => s.PaymentType, new { @class = "control-label", style = "font-weight:bold;" })
        <div class="controls">
            @Html.DropDownListFor(s => s.PaymentType, @Model.PaymentTypeList, new { @class = "form-control" })
        </div>
    </div>
    <br />
    <div class="input-group">
        <input type="submit" class="btn btn-primary" value="Submit" />
    </div>
}