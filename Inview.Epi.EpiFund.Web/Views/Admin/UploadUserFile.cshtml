@model Inview.Epi.EpiFund.Domain.ViewModel.UploadUserFileModel
@{
    ViewBag.Title = "Upload User File";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h3 class="page-header">Upload File</h3>
<p>Upload any PDF (less than 4MB)</p>
@using (Html.BeginForm("UploadUserFile", "Admin", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(s => s.UserId)
    <div class="control-group">
        @Html.LabelFor(s => s.FileTitle, new { @class = "control-label", style = "font-weight:bold;" })
        <div class="controls">
            @Html.TextBoxFor(m => m.FileTitle)@Html.ValidationMessageFor(s => s.FileTitle, "*")
        </div>
    </div>   
    <div class="control-group">
        @Html.LabelFor(s => s.UploadedDocument, new { @class = "control-label", style = "font-weight:bold;" })
        <div class="controls">
            @Html.TextBoxFor(s => s.UploadedDocument, new { type = "file" })
        </div>
    </div>
    <div class="control-group">
        <div class="controls">
            <input type="button" class="btn btn-warning" value="Cancel" onclick="location.href='@Url.Action("EditUser", "Admin", new { id = @Model.UserId })'" />
            <input type="submit" class="btn btn-primary" value="Upload">
        </div>
    </div>
}