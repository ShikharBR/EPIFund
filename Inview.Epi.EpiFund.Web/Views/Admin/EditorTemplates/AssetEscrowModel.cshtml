<div class="panel panel-default">
    <div class="panel-heading">
        Asset Accounting
    </div>
    <div class="panel-body">

        <div class="row">
            <table border="1">
                <tr>
                    <td colspan="6">
                        <label class="control-label">Asset Details</label>
                    </td>
                </tr>
                <tr>
                    <td>Line 1</td>
                    <td>@Html.LabelFor(s => s.AssetNumber, new { @class = "control-label" })  : @Html.DisplayFor(s => s.AssetNumber)</td>
                    <td>@Html.LabelFor(s => s.AssetType, new { @class = "control-label" })  : @Html.DisplayFor(s => s.AssetType)</td>
                    <td>@Html.LabelFor(s => s.AssetName, new { @class = "control-label" })  : @Html.DisplayFor(s => s.AssetName)</td>
                    <td>@Html.LabelFor(s => s.Address, new { @class = "control-label" })  : @Html.DisplayFor(s => s.Address)</td>
                    <td>@Html.DisplayFor(s => s.City)&nbsp;@Html.DisplayFor(s => s.State)&nbsp;@Html.DisplayFor(s => s.ZipCode)</td>
                </tr>
                <tr>
                    <td>Line 2</td>
                    <td colspan="3">
                        @Html.LabelFor(s => s.HoldingCompany, new { @class = "control-label" })  :
                        @if (!string.IsNullOrEmpty(Model.HoldingCompany))
                        {
                        <a href="javascript:void(0)" onclick="HoldingCoDetail('@Model.HoldingCompanyId')">@Model.HoldingCompany</a>
                        }
                        else
                        {
                        @Html.Raw("N/A")
                        }
                        <br />
                        @Html.LabelFor(s => s.OperatingCompany, new { @class = "control-label" })  :
                        @if (!string.IsNullOrEmpty(Model.OperatingCompany))
                        {
                        <a href="javascript:void(0)" onclick="OperatingCoDetail('@Model.OperatingCompanyId')">@Model.OperatingCompany</a>
                        }
                        else
                        {
                        @Html.Raw("N/A")
                        }
                    </td>

                    <td width="160px">
                        @Html.LabelFor(s => s.AssetPublished, new { @class = "control-label" })  :  @(Model.AssetPublished ? "Yes" : "No")
                        <br />
                        <label class="control-label">Last Activity Date</label>:01/05/2022
                    </td>
                    <td>@Html.LabelFor(s => s.LoginHistory, new { @class = "control-label" })  : @(Model.LoginHistory.HasValue ? Model.LoginHistory.Value.ToString("MM/dd/yyyy") : "")</td>
                </tr>
                <tr>
                    <td>Line 3</td>
                    <td>
                        @Html.LabelFor(s => s.PublishedAmount, new { @class = "control-label" })  :  @Html.DisplayFor(s => s.PublishedAmount)
                    </td>
                    <td>
                        <img style="width:15px;" title="Who’s Driving the Bus" src="~/Content/images/bus.png" />
                        @if (Model.BusDriver == "SUS")
                        {
                        <span class="red">@Model.BusDriver</span>
                        }
                        else
                        {
                        <span>@Model.BusDriver</span>
                        }
                    </td>
                    <td>
                        @if (Model.Portfolio)
                        {
                        <span style="font-size: 14px; cursor: pointer;" class="glyphicon glyphicon-book" title="Portfolio" onclick="Viewportfolio('@Model.AssetId.ToString()',this)"></span>  @Html.Raw("Yes")
                        }
                        else
                        {
                        <span style="font-size:14px;" class="glyphicon glyphicon-book" title="Portfolio"></span>  @Html.Raw("No")
                        }
                    </td>
                    <td>
                        <span style="cursor:pointer" title="Chain Of Title" onclick="ViewChainOfTitle('@Model.AssetId.ToString()')">
                            <img title="Chain of Title" style="width:16px;" src="~/Content/images/tringle.png" />Chain of Title
                        </span>
                    </td>

                </tr>
                <tr>
                    <td colspan="6">
                        <label class="control-label">
                            Pending Sale Details
                        </label>
                    </td>
                </tr>
                <tr>
                    <td>Line 1 (Tx)</td>
                    <td><a title="LOI Summary">LOI Summary</a></td>
                    <td><a title="FPA Summary">FPA Summary</a></td>
                    <td><label class="control-label">FPA Title Co</label>: [xxxxxxxxxxxxxx]</td>
                    <td><label class="control-label">Is Title Co an [SP]</label> : Y</td>
                    <td><label class="control-label">Send Title IPA Notification</label> : Y 05/01/2022</td>
                </tr>
                <tr>
                    <td>Line 2 (Tx)</td>
                    <td colspan="3">
                        <label class="control-label">Buyer Holding Co</label> : [xxxxxxxxxxxxxx]
                        <br />
                        <label class="control-label">Buyer Operating Co</label> : [xxxxxxxxxxxxxx]
                    </td>
                    <td><label class="control-label">Is Buyer a [PI]</label> : Y</td>
                    <td><label class="control-label">Send all [PI’s] Notification</label> : Y 05/01/2022</td>
                </tr>
                <tr>
                    <td>Line 3 (Tx)</td>
                    <td colspan="2"><label class="control-label">FPA SP</label>: [$x,xxx,xxx]</td>
                    <td><label class="control-label">Projected COE Date</label>: [xx/xx/xx]</td>
                    <td><label class="control-label">[PI-S] 1% Fee</label>: [$xxx,xxx]</td>
                    <td><label class="control-label">[PI-B] 1% Fee</label>: [$xxx,xxx]</td>

                </tr>
            </table>

        </div>

