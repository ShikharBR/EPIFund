@model Inview.Epi.EpiFund.Domain.ViewModel.PersonalFinancialStatementTemplateModel
@{
    ViewBag.Title = "Execute Personal Financial Statement";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.BodyClass = "ExecutePersonalFinancialStatement";
}
@using (Html.BeginForm("ExecutePersonalFinancialStatement", "DataPortal"))
{
    <div class="executepersonalfinancialstatement"> 
        <h3 class="page-header">Execute Personal Financial Statement</h3>
        <p>To download a sample Personal Financial Statement template, click <a href="@Url.Action("DownloadPFSTemplate", "DataPortal")">here</a></p>
        <p>Fill out fields below to execute Personal Financial Statement. DocuSign will email you to digitally sign document. Once document has been signed and received by USC. You will receive an email from USC with the signed document. You can also view executed Personal Financial Statement through My USC Page.</p>
        @Html.ValidationSummary()
        @Html.EditorForModel()  
        <br />
        <br />
        <div class="input-group">
            <input type="button" class="btn btn-default" style="margin-right: 20px;" name="EditPFS" value="Reset" onclick="resetForm()" />
            <input type="submit" class="btn btn-default" style="margin-right: 20px;" name="action:Save" value="Save to My USC Page" onclick="return verify();" />
            <input type="submit" class="btn btn-primary" style="margin-right: 20px;" value="Submit" name="action:Submit" onclick="return verifySubmit();" />
        </div>
    </div>
}

<script>
    function verifySubmit()
    {
        if (confirm('You are about to Submit your Personal Financial Statement Form to the MBA Member of your election.  USC will follow up with your elected MBA Member to ensure proper and timely response to your submittal, however, it is solely your responsibility to professionally engage with your elected MBA Member to ensure proper, timely, and effective service as you may request.  You will not be able to submit your PFS without attaching your Proof of Funds Verification and Corporate Operating Resume. Once you have submitted your Personal Financial Statement Form and attachments to your elected MBA Member, USC will send an automated e mail to said MBA Member to ensure notification of your data delivery and encourage timely follow up between all parties thereto.')) return true;
        else return false;
    }
    function verify() {
        if (confirm('You are about to Save your Personal Financial Statement Form to your "My USC Page" at US CRE Online.  Your Form will not have been submitted to the MBA Member of your election for processing.  You can update and Submit the PFS Form to your elected MBA Member at any time.  Once you have submitted your Personal Financial Statement Form and attachments to your elected MBA Member, USC will follow up with your elected MBA Member to ensure proper and timely response to your submittal.  Please note that it is solely your responsibility to professionally engage with your elected MBA Member to ensure proper, timely, and effective service as you may request.  You will not be able to submit your PFS without attaching your Proof of Funds Verification and Corporate Operating Resume.   Your Form will be always be saved to your "My USC Page", where you can update and re-submit at any time.')) {
            return true;
        }
        return false;
    }
    function resetForm() {
        if (confirm('If you click ok, you will lose all of the data you entered and be returned to the top of the form.')) {
            $(".resetable").each(function () {
                $(this).val("");
            });
            $('html,body').scrollTop(0);
        }
    }
</script>
