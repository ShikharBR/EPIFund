@model Inview.Epi.EpiFund.Web.Models.UserReferralModel
@{
    ViewBag.Title = "Refer User";
}

@using (@Html.BeginForm("ReferUser", "Home", FormMethod.Post))
{
    <h3 class="page-header">Refer User</h3>
    <p>
        Enter the email of the user you want to refer.
    </p>
    @Html.ValidationSummary(false)
    <br />
    <br />
    <div class="row">
        <div class="col-lg-3">
            <div class="input-group">
                @Html.LabelFor(s => s.Email)
            </div>
        </div>
        <div class="col-lg-9">
            <div class="input-group">
                @Html.TextBoxFor(s => s.Email)
            </div>
        </div>
    </div>
    <br />
    <br />
    <input type="submit" class="btn btn-default" value="Submit" />
    <a href="@Url.Action("MyUSCPage","Home")" class="btn btn-warning">Cancel</a>
}