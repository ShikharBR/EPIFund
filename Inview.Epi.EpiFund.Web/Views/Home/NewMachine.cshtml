@model Inview.Epi.EpiFund.Domain.ViewModel.UserMachineModel
@{
    ViewBag.Title = "New Machine";
}

@using (@Html.BeginForm("NewMachine", "Home", FormMethod.Post, new { @id = "NewMachineForm" }))
{
    <h3 class="page-header">New Machine</h3>
    <p>
        We see you're logging in to the site from a new browser or a new computer. As an added security measure, you'll need to grant access to this machine by entering the special code we've sent to your email address. If you have not received an email with a security code, click the Resend button below.
    </p>
    @Html.ValidationSummary(false)
    <br />
    <br />
    <div class="row">
        <div class="col-lg-3">
            <div class="input-group">
                <label>Username:</label>
            </div>
        </div>
        <div class="col-lg-9">
            <div class="input-group">
                @Html.TextBoxFor(s => s.Username)
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">
            <div class="input-group">
                <label>Password:</label>
            </div>
        </div>
        <div class="col-lg-9">
            <div class="input-group">
                @Html.PasswordFor(s => s.Password)
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">
            <div class="input-group">
                <label>Security Code:</label>
            </div>
        </div>
        <div class="col-lg-9">
            <div class="input-group">
                @Html.TextBoxFor(s => s.Code)
            </div>
        </div>
    </div>
    <br />
    <br />
    <input type="submit" class="btn btn-default" name="action:ResendEmail" style="margin-right: 5px;" value="Resend Email"/>
    <input type="submit" class="btn btn-primary" id="SubmitButton" value="Submit" name="action:NewMachine"/>
    @Html.HiddenFor(m => m.ReturnUrl)
    @Html.HiddenFor(m => m.AssetNumber)
}

<div class="modal fade" id="newICAdminModal">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5>IC Admin</h5>
			</div>
			<div class="modal-body text-center">
				<p>
                    Thank you for Registering as a new Independent Contractor applicant for US CRE Online LLC. 
                    To complete your Registration process please click @Html.ActionLink("here", "ExecuteICAgreement", "DataPortal") to be taken to the Employment
                    Opportunities page for USC.  You will be prompted to scroll down the page to the “Execute IC Agreement” button. 
                    Once you have fully executed the USC standard Independent Contractor 
                    Agreement… which is completed on line through the nationally recognized DocuSign service… and takes only minutes to complete… USC will receive your fully executed Agreement and 
                    commence its due diligence to determine if you would be a good fit as an IC Admin for US CRE Online LLC.  Thank you.
				</p>
			</div>
		</div>
	</div>
</div>

<script>
    $(window).bind("load", function () {
        if ("@TempData["NewICAdmin"]") {
            if ("@TempData["NewICAdmin"]" == "true") {
                $('#newICAdminModal').modal('show');
            }
        }
        
    });

    $(function () {
        $('input').keydown(function (e) {
            if (e.keyCode == 13) {
                $("input[value='Submit']").focus().click();
                return false;
            }
        });
    });

    
</script>