@model Inview.Epi.EpiFund.Domain.ViewModel.ChangePasswordModel
@{
    ViewBag.Title = "Change Password";
    Layout = ViewBag.Layout;
}

@using (Html.BeginForm("ChangePassword", "Home", FormMethod.Post))
{
    <h3 class="page-header">Change Password</h3>
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(false)
    <div class="control-group">
        @Html.LabelFor(s => s.Password, new { @class = "control-label", style = "font-weight:bold;" })<span class="red">*</span>
        <div class="controls">
            @Html.PasswordFor(s => s.Password)
        </div>
    </div>
    <div class="control-group">
        @Html.LabelFor(s => s.ConfirmPassword, new { @class = "control-label", style = "font-weight:bold;" })<span class="red">*</span>
        <div class="controls">
            @Html.PasswordFor(s => s.ConfirmPassword)
        </div>
    </div>
    <br />
    <input type="submit" class="btn btn-primary" id="btnSave" name="btnSave" value="Change Password" />
}
