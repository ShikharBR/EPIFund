    function getNumberFromNonInput(element) {
        var str = element.innerHTML;
        var tmp = '';

        if (element.innerHTML.length == 0) {
            return null;
        }

        for (var i = 0; i < str.length; i++) {
            var ch = str.substring(i, i + 1);
            if (ch == '$' || ch == ',' || ((ch < '0' || ch > '9') && ch != '.')) {
                continue;
            }
            tmp += ch;
        }

        if (tmp == '') {
            return null;
        }

        var num = parseFloat(tmp)

        return num;
    }

